<% content_for :title, "Departments" %>

<div class="page-header">
  <h1>Departments</h1>
  <%= link_to "New Department", new_department_path, class: "btn btn-primary" %>
</div>

<% if @departments.any? %>
  <table class="data-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Employees Count</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td><%= department.name %></td>
          <td><%= department.employees.count %></td>
          <td><%= department.created_at.strftime("%b %d, %Y") %></td>
          <td>
            <%= link_to "Show", department, class: "action-link" %> |
            <%= link_to "Edit", edit_department_path(department), class: "action-link" %> |
            <%= link_to "Delete", department, data: { turbo_method: :delete, turbo_confirm: "Are you sure? This will fail if the department has employees." }, class: "action-link reject-link" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="empty-state">
    <p>No departments found.</p>
    <%= link_to "Create First Department", new_department_path, class: "btn btn-primary" %>
  </div>
<% end %>

